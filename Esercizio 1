#include <stdio.h>

void print_menu();
int gioca_partita();

int main() {
    char scelta;

    print_menu();

    scanf("%c", &scelta);

    if (scelta == 'B') {
        printf("Grazie per aver giocato, arrivederci\n");
        return 0;
    }

    while (scelta == 'A') {
        gioca_partita();
        print_menu();
        scanf(" %c", &scelta);
    }

    return 0;
}

void print_menu() {
    printf("Start menu:\n");
    printf("A >> Inizia una nuova partita\nB >> Esci dal gioco\n");
    printf("Inserisci la lettera corrispondente alla tua scelta:");
}

int gioca_partita() {
    int punteggio = 0;
    char nome[20];
    char risposta1[2], risposta2[2];

    printf("Inserisci il tuo nome:\n");
    scanf("%s", nome);

    printf("Domanda numero 1:\n");
    printf("Qual Ã¨ la capitale italiana?\n");
    printf("A >>> Milano\nB >>> Roma\nC >>> Napoli\n");
    printf("Inserire la risposta:");
    scanf(" %s", risposta1);

    if (risposta1[0] == 'B') {
        punteggio++;
    }

    printf("Domanda numero 2:\n");
    printf("Quanti municipi ha Roma?\n");
    printf("A >>> 15\nB >>> 5\nC >>> 12\n");
    printf("Inserire la risposta:");
    scanf(" %s", risposta2);

    if (risposta2[0] == 'A') {
        punteggio++;
    }

    printf("Partita conclusa, punteggio totalizzato da %s:%d\n", nome, punteggio);

    return 0;
}
